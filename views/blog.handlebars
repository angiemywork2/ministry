<div class="row">
	<div class=" col s12 m12 l12 xl12 card-panel deep-purple lighten-1" id="blogContainer">
		
		<h1 class="center-align purple darken-1 white-text">Blog Posts</h1>

		{{#for each}}
		<div class="container">
			<div class="row">
				<div class="col s12 m12 l12 xl12 offset-m1" id="blog-entries">
					<div class="card-panel light-blue lighten-5">
						<div class="section">
							<h4 class="grey-text" id="blogtitle">Title</h4>
						</div>
						<div class="divider"></div>
						<div class="section">
							<p id="blogtext">BLOG BODY</p>
						</div>
						<div class="divider"></div>
						<div class="section">
							<p id = "authortext">AUTHOR</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{/each}}

		<div class="container">
			<div class="row">
				<div class="col s12 m12 l12 xl 12 offset-m1" >
					<a class="waves-effect light-blue lighten-5 grey-text btn">Admin</a>
				</div>
			</div>
		</div>

	</div>
</div>

